{erl_opts, [debug_info,
	    {parse_transform, lager_transform},
            % fail_on_warning,
            warn_unused_vars,
            % warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            warn_export_vars,
            warn_exported_vars,
            % warn_untyped_record,
            warn_missing_spec,
            strict_validation
	    ]}.
{deps, [
       lager
       ,systemd]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [systemdtest]}
]}.

{relx, [{release, {myrel, "0.2.0"},
         [systemdtest]},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]}.